<h3>
    {{#if category}}
        Update Category - {{category.name}}
    {{else}}
        Create Category
    {{/if}}
</h3>
<div class="card">
    <div class="card-body">
        <form action="{{#if category}}/admins/categories/update{{else}}/admins/categories/add{{/if}}" method="POST">
            <input type="hidden" id="id" name="id" value="{{#if category}}{{category._id}}{{else}}{{/if}}">
            <label for="name">*Name:</label>
                <input type="text" id="name" name="name" 
                    placeholder="Category's name" 
                    class="form-control"
                    value="{{#if category}}{{category.name}}{{else}}{{/if}}"
                    autofocus required>

            <label for="slug">*Slug:</label>
                <input type="text" id="slug" name="slug" 
                    placeholder="Category's slug" 
                    class="form-control"
                    value="{{#if category}}{{category.slug}}{{else}}{{/if}}"
                required>
            <br>
            <div class="text-left">
                <small style="color: red">* Required Fields</small>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success">{{#if category}}Update{{else}}Create{{/if}}</button>
            </div>
        </form>
    </div>
</div>
{{>_goBackButton}}