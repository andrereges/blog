<h3>{{#if post}}Update Post - {{post.name}}{{else}}Create Post{{/if}}</h3>

<div class="card">
    <div class="card-body">
        <form action="{{#if post}}/admin/posts/update{{else}}/admin/posts/add{{/if}}" method="POST">
            
            <input type="hidden" id="id" name="id" value="{{#if post}}{{post._id}}{{else}}{{/if}}">
            
            <label for="title">*Title:</label>
                <input type="text" id="title" name="title" 
                    placeholder="Post's title" 
                    class="form-control"
                    value="{{#if post}}{{post.title}}{{else}}{{/if}}"
                    autofocus required>

            <label for="slug">*Slug:</label>
                <input type="text" id="slug" name="slug" 
                    placeholder="Post's slug" 
                    class="form-control"
                    value="{{#if post}}{{post.slug}}{{else}}{{/if}}"
                required>

            <label for="description">*Description:</label>
                <input type="text" id="description" name="description" 
                    placeholder="Post's description" 
                    class="form-control"
                    value="{{#if post}}{{post.description}}{{else}}{{/if}}"
                required>

            <label for="content">*Content:</label>
                <textarea id="content" name="content" class="form-control" placeholder="Post's Content" required>{{#if post}}{{post.content}}{{else}}{{/if}}</textarea>

            <label for="category">*Category:</label>
                    
                <select id="category" name="category" class="form-control" required>  
                    {{#if post}}
                        <option value="{{post.category._id}}">{{ post.category.name }}(selected)</option>
                    {{/if}}
     
                    {{#each categories}}
                        <option value="{{_id}}">{{ name }}</option>
                    {{else}}
                        <option value="0">No categories available</option>
                    {{/each}}
                </select>
            <br>
            <div class="text-left">
                <small style="color: red">* Required Fields</small>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success">{{#if post}}Update{{else}}Create{{/if}}</button>
            </div>
        </form>
    </div>
</div>
{{>_goBackButton}}